{
  "crons": [
    {
      "path": "/api/newsletter",
      "schedule": "0 8 * * 1-5"
    }
  ],
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}
